@model AddressModel
<div class="edit-address form-horizontal">
    <input class="address-id" asp-for="Id" type="hidden" />
    <div class="form-group">
        <div class="col-xs-12 col-sm-3 col-md-3 forms-label">
            <label class="control-label" asp-for="FirstName" asp-postfix=":"></label>
            <nop-required />
        </div>
        <div class="col-sm-6 col-md-5">
            <input class = "form-control" asp-for="FirstName" />
        </div>
        <div class="col-sm-3 col-md-4">
            <span asp-validation-for="FirstName"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12 col-sm-3 col-md-3 forms-label">
            <label class = "control-label" asp-for="LastName" asp-postfix=":"></label>
            <nop-required />
        </div>
        <div class="col-sm-6 col-md-5">
            <input class = "form-control" asp-for="LastName" />
        </div>
        <div class="col-sm-3 col-md-4">
            <span asp-validation-for="LastName"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12 col-sm-3 col-md-3 forms-label">
            <label class = "control-label" asp-for="Email" asp-postfix=":"></label>
            <nop-required />
        </div>
        <div class="col-sm-6 col-md-5">
            <input class = "form-control" asp-for="Email" />
        </div>
        <div class="col-sm-3 col-md-4">
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    @if (Model.CompanyEnabled)
    {
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 col-md-3 forms-label">
                <label class = "control-label" asp-for="Company" asp-postfix=":"></label>
                @if (Model.CompanyRequired)
                {
                    <nop-required />
                }
            </div>
            <div class="col-sm-6 col-md-5">
                <input class = "form-control" asp-for="Company" />
            </div>
            <div class="col-sm-3 col-md-4">
                <span asp-validation-for="Company"></span>
            </div>
      </div>
    }
    @if (Model.CountryEnabled)
    {
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 col-md-3 forms-label">
                <label class ="control-label" asp-for="CountryId" asp-postfix=":"></label>
                <nop-required />
            </div>
            <div class="col-sm-6 col-md-5">
                <select class="form-control dropdown-toggle form-control category-iteam category-select" asp-for="CountryId" asp-items="Model.AvailableCountries"
                    data-trigger="country-select"
                    data-url="@(Url.RouteUrl("GetStatesByCountryId"))"
                    data-stateprovince="#@Html.IdFor(model => model.StateProvinceId)"
                    data-loading="#states-loading-progress">
                </select>
            </div>
            <div class="col-sm-3 col-md-4">
                <span asp-validation-for="CountryId"></span>
            </div>
        </div>
    }
    @if (Model.CountryEnabled && Model.StateProvinceEnabled)
    {
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 col-md-3 forms-label">
                <label class = "control-label" asp-for="StateProvinceId" asp-postfix=":"></label>
            </div>
            <div class="col-sm-6 col-md-5">
                <select class="form-control dropdown-toggle category-iteam form-control category-select" asp-for="StateProvinceId" asp-items="Model.AvailableStates" data-trigger="state-select"></select>
                <span id="states-loading-progress" style="display: none;" class="please-wait">@T("Common.Wait")</span>
                <span asp-validation-for="StateProvinceId"></span>
            </div>
        </div>       
    }
    @if (Model.CityEnabled)
    {
         <div class="form-group">
             <div class="col-xs-12 col-sm-3 col-md-3 forms-label">
                <label class = "control-label" asp-for="County" asp-postfix=":"></label>
                @if (Model.CountyRequired)
                {
                    <nop-required />
                }
             </div>
             <div class="col-sm-6 col-md-5">
                 <input class = "form-control" asp-for="County" />
             </div>
             <div class="col-sm-3 col-md-4">
                <span asp-validation-for="County"></span>
             </div>
        </div>      
    }
    @if (Model.CityEnabled)
    {
         <div class="form-group">
            <div class="col-xs-12 col-sm-3 col-md-3 forms-label">
                <label class = "control-label" asp-for="City" asp-postfix=":"></label>
                @if (Model.CityRequired)
                {
                    <nop-required />
                }
             </div>
             <div class="col-sm-6 col-md-5">
                 <input class = "form-control" asp-for="City" />
             </div>
             <div class="col-sm-3 col-md-4">
                <span asp-validation-for="City"></span>
             </div>
        </div>      
    }
    @if (Model.StreetAddressEnabled)
    {
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 col-md-3 forms-label">
                <label class = "control-label" asp-for="Address1" asp-postfix=":"></label>
                @if (Model.StreetAddressRequired)
                {
                    <nop-required />
                }
            </div>
            <div class="col-sm-6 col-md-5">
                <input class = "form-control" asp-for="Address1" />
            </div>
            <div class="col-sm-3 col-md-4">
                <span asp-validation-for="Address1"></span>
            </div>
        </div>   
    }
    @if (Model.StreetAddress2Enabled)
    {
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 col-md-3 forms-label">
                <label class = "control-label" asp-for="Address2" asp-postfix=":"></label>
                @if (Model.StreetAddress2Required)
                {
                    <nop-required />
                }
            </div>
            <div class="col-sm-6 col-md-5">
                <input class = "form-control" asp-for="Address2" />
            </div>
            <div class="col-sm-3 col-md-4">
                <span asp-validation-for="Address2"></span>
            </div>
       </div>    
    }
    @if (Model.ZipPostalCodeEnabled)
    {
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 col-md-3 forms-label">
                <label class = "control-label" asp-for="ZipPostalCode" asp-postfix=":"></label>
                @if (Model.ZipPostalCodeRequired)
                {
                    <nop-required />
                }
            </div>
            <div class="col-sm-6 col-md-5">
                <input class = "form-control" asp-for="ZipPostalCode" />
            </div>
            <div class="col-sm-3 col-md-4">
                <span asp-validation-for="ZipPostalCode"></span>
            </div>
      </div>   
    }
    @if (Model.PhoneEnabled)
    {
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 col-md-3 forms-label">
                <label class = "control-label" asp-for="PhoneNumber" asp-postfix=":"></label>
                @if (Model.PhoneRequired)
                {
                    <nop-required />
                }
            </div>
            <div class="col-sm-6 col-md-5">
                <input class = "form-control" asp-for="PhoneNumber" />
            </div> 
            <div class="col-sm-3 col-md-4">
                <span asp-validation-for="PhoneNumber"></span>
            </div>
         </div>
    }
    @if (Model.FaxEnabled)
    {
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 col-md-3 forms-label">
                <label class = "control-label" asp-for="FaxNumber" asp-postfix=":"></label>
                @if (Model.FaxRequired)
                {
                    <nop-required />
                }
            </div>
            <div class="col-sm-6 col-md-5">
                <input class = "form-control" asp-for="FaxNumber" />
            </div>
            <div class="col-sm-3 col-md-4">
                <span asp-validation-for="FaxNumber"></span>
            </div> 
        </div>  
    }
    @if (Model.CustomAddressAttributes.Count > 0)
    {
        @await Html.PartialAsync("_AddressAttributes", Model.CustomAddressAttributes)
    }
    @await Component.InvokeAsync(typeof(WidgetViewComponent), new { widgetZone = PublicWidgetZones.AddressBottom, additionalData = Model })
</div>
