@inject Nop.Core.IWorkContext workContext

@{
    var supportRtl =(await workContext.GetWorkingLanguageAsync()).Rtl;
    <script  asp-exclude-from-bundle="true" asp-location="Footer" src= "~/Plugins/NopStation.Plugin.Widgets.OCarousels/Contents/script/owl.carousel.min.js"></script>
    <script  asp-exclude-from-bundle="true" asp-location="Footer" src= "~/Plugins/NopStation.Plugin.Widgets.OCarousels/Contents/script/nopstation.carousel.js"></script>
    NopHtml.AppendCssFileParts("/Plugins/NopStation.Plugin.Widgets.OCarousels/Contents/css/styles.css",string.Empty);

    if (supportRtl)
    {
        NopHtml.AppendCssFileParts("/Plugins/NopStation.Plugin.Widgets.OCarousels/Contents/css/rtl/owl.theme.green.min.css",string.Empty);
        NopHtml.AppendCssFileParts("/Plugins/NopStation.Plugin.Widgets.OCarousels/Contents/css/rtl/owl.carousel.css",string.Empty);
    }
    else
    {
        NopHtml.AppendCssFileParts("/Plugins/NopStation.Plugin.Widgets.OCarousels/Contents/css/owl.theme.green.min.css",string.Empty);
        NopHtml.AppendCssFileParts("/Plugins/NopStation.Plugin.Widgets.OCarousels/Contents/css/owl.carousel.css",string.Empty);
    }
}

<script asp-exclude-from-bundle="true" asp-location="Footer">
    var carouseldata = {};
    carouseldata.CarouselFailure = '@T("NopStation.OCarousels.LoadingFailed")';

    $(document).ready(function () {
        Carousel.init('@Url.RouteUrl("OCarousel")', '.carousel-container', '.carousel-container .loader', carouseldata);
    });
</script>
